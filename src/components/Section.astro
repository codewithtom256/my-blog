---
const { title, description, seeAllLink } = Astro.props;
---

<section class="my-8">
  <div class="flex justify-between items-center">
    <div>
      <h3 class="text-xl font-bold leading-none">{title}</h3>
      <h2 class="text-sm font-semibold w-96 leading-none mt-1">
        {description}
      </h2>
    </div>
    {
      seeAllLink && (
        <a href={seeAllLink} class="btn btn-sm btn-primary">
          Voir tout
        </a>
      )
    }
  </div>
  <slot />
</section>
